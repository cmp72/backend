<div class="container" style="margin-top: 50px auto">
    {{!--fila 1--}}
    <div class="row">
        <p class="text-end">Hola {{persona}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión
                <i class="fa fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- Fin fila 1--}}


    {{!-- fila 2--}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>

        </div>
        <div class="col-5 text-end">
            <a  href="/admin/novedades/agregar"class="btn btn-success" ><i class="fa fa-plus" aria-hidden="true">
                {{!--arriba cambie de sitio class= btn...., si no funciona lo vuelvo a poner delante de href --}}
            </i>Nuevo</a>
        </div>
    </div>
    {{!-- Fin fila 2--}}
    {{!-- fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th  class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a  href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                            <i class="fa fa-pencil" ></i></a>
                            <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}" >
                            <i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>

    {{!-- Fin fila 3--}}

</div>